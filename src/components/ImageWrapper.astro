---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   altText: string;
}

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/*.{jpeg,jpg,png}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png}"`);
---

<div class="container">
    <Image class='img' src={images[imagePath]()} alt={altText} />
</div>


<style>
    .img {
        height: 100%;
        width: 100%;
        object-fit: contain;
    }
    .container {
        display: flex;
        justify-content: center;
    }   
</style>

